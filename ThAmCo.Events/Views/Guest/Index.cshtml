@model List<Guest>
@{
    ViewData["Title"] = "Guests";
}

<h2>Guests</h2>


<div>
    <a asp-action="Create" type="button" class="btn btn-sm btn-light text-black  mb-4">
        <i class="bi bi-plus-circle-dotted"> Create Guest</i>
    </a>
</div>
<table class="table mb-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Phone)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.GuestId" class="btn btn-light rounded rounded-3 me-2" data-toggle="tooltip" data-placement="top" title="Ditals">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.GuestId" class="btn btn-info rounded rounded-3 me-2" data-toggle="tooltip" data-placement="top" title="Edit">
                        <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.GuestId" class="btn btn-danger rounded rounded-3 me-2" data-toggle="tooltip" data-placement="top" title="Delete">
                        <i class="bi bi-trash3"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
