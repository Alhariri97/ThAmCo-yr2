@model ThAmCo.Events.DTO.StaffDTO

@{
    ViewData["Title"] = "Create Staff";
}

<h2>Add Staff Information</h2>


<form method="post">

    <div class="row">
        <dvi class="col-md-6">
            <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position">Position:</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HieraData">Hiera Data:</label>
                <input asp-for="HieraData" type="date" class="form-control" />
            </div>
        </dvi>
        <dvi class="col-md-6">
            <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number:</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FirstAider">First Aider:</label>
                <div class="custom-control custom-switch">
                    <input asp-for="FirstAider" type="checkbox" class="custom-control-input" id="customSwitch1" style="display: none;">
                    <label class="custom-control-label cursor-pointer" for="customSwitch1">
                        Check if Staff is a First Aider
                        <span class="bi bi-shield fs-2 unchecked-icon"></span> <!-- Icon for unchecked state -->
                        <span class="bi bi-shield-check fs-2 checked-icon"></span> <!-- Icon for checked state -->
                    </label>

                </div>
            </div>

        </dvi>
    </div>
    <button type="submit" class="btn btn-light text-black rounded rounded-3 ">
        <i class="bi bi-plus-circle-dotted"> </i>  Create Event
    </button>
    <a asp-action="Index" class="btn btn-secondary rounded rounded-3 m-4" data-toggle="tooltip" data-placement="top" title="Cancel ">
        <i class="bi bi-x-square "> Cancel</i>
    </a>

</form>
