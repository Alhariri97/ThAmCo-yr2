@model DeleteFromEventViewModel

<h2>Delete Staff from Event</h2>

<p>Are you sure you want to delete @Model.Staff.FullName from the event @Model.Event.EventName?</p>

<form asp-action="DeleteFromEvent" asp-controller="Staff" method="post">
    <input name="staffId" type="hidden" asp-for="Staff.StaffId" />
    <input name="eventId" type="hidden" asp-for="Event.EventId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-controller="Staff" asp-route-id="@Model.Staff.StaffId" class="btn btn-secondary">Cancel</a>
</form>
