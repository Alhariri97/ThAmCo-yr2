@model ThAmCo.Events.Models.Staff

@{
    ViewData["Title"] = "Delete Staff";
}

<h2>Delete Staff</h2>
<h3>Are you sure you want to delete this staff member?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FullName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FullName)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PhoneNumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PhoneNumber)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Position)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Position)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.HieraData)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.HieraData)
    </dd>
</dl>


<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StaffId" />
    <button type="submit" class="btn btn-danger rounded rounded-3 me-2">
        <i class="bi bi-trash3"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary rounded rounded-3 me-2" data-toggle="tooltip" data-placement="top" title="Cancel ">
        <i class="bi bi-x-square"> Cancel</i>
    </a>

</form>

